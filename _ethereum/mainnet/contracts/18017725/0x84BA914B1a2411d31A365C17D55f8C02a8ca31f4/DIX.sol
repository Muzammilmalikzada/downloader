/**
 * @title DIX NFT
 * @dev Extends ERC1155Delta from ctor.xyz
 */

contract DIX is ERC1155DeltaQueryable, ERC2981, DefaultOperatorFilterer {
  address public owner; // contract owner

  uint256 public constant MAX_SUPPLY = 2222; // max supply
  uint256 public mintPrice; // mint price

  bool public publicMinting; // mintable state

  event MintPrice(uint256 indexed price); // mint price event
  event OwnershipTransferred(
    address indexed previousOwner,
    address indexed newOwner
  ); // ownership transfer event
  event Withdraw(address indexed to, uint256 indexed amount); // withdraw event
  event SetURI(string indexed uri); // set uri event
  event PublicMinting(bool state); // public minting state event
  event Minted(address indexed to, uint256 indexed amount); // minted event

  /// @dev Modifier for owner only functions
  modifier onlyOwner() {
    require(msg.sender == owner, '!Owner');
    _;
  }

  /// @dev Constructooor
  constructor(
    address newOwner
  )
    ERC1155Delta('https://mint.stoopiddix.com/dix/{id}.json')
    ERC1155DeltaQueryable()
    ERC2981()
  {
    owner = newOwner;

    publicMinting = false;

    mintPrice = 0.02 ether;

    _setDefaultRoyalty(owner, 500);
  }

  // *** SETTERS ***

  /**
   * @notice Mint tokens to address
   * @param to Address minting to
   * @param amount Amount minting
   */
  function mint(address to, uint256 amount) external payable {
    require(publicMinting, '!Public');
    require(_totalMinted() + amount <= MAX_SUPPLY, '!Supply');
    require(msg.value >= mintPrice * amount, '!Price');

    _mint(to, amount);

    emit Minted(to, amount);
  }

  /**
   * @notice Transfer mint funds to owner
   */
  function withdraw() external {
    payable(owner).transfer(address(this).balance);

    emit Withdraw(owner, address(this).balance);
  }

  /**
   * @notice Burn token
   * @param tokenId Token ID to burn
   */
  function burn(uint256 tokenId) external {
    _burn(msg.sender, tokenId);
  }

  /**
   * @notice Burn tokens
   * @param tokenIds Token IDs to burn
   */
  function burnBatch(uint256[] memory tokenIds) external {
    _burnBatch(msg.sender, tokenIds);
  }

  /// @notice Set owner address
  function transferOwnership(address _newOwner) external onlyOwner {
    owner = _newOwner;

    emit OwnershipTransferred(owner, _newOwner);
  }

  /// @notice Set mint price
  function setMintPrice(uint256 _mintPrice) external onlyOwner {
    mintPrice = _mintPrice;

    emit MintPrice(_mintPrice);
  }

  /// @notice Set minting state
  function setMintable(bool _publicMinting) external onlyOwner {
    publicMinting = _publicMinting;

    emit PublicMinting(_publicMinting);
  }

  /// @notice Set URI of tokens for later reveal to protect randomness
  function setURI(string memory newuri) external onlyOwner {
    _setURI(newuri);

    emit SetURI(newuri);
  }

  /// @notice Set royalty for marketplaces complying with ERC2981 standard
  function setDefaultRoyalty(
    address receiver,
    uint96 feeNumerator
  ) public onlyOwner {
    _setDefaultRoyalty(receiver, feeNumerator);
  }

  // *** GETTERS ***

  /**
   * @notice Get total minted
   * @return Total minted
   */
  function totalMinted() public view returns (uint256) {
    return _totalMinted();
  }

  // *** OVERRIDES FOR OPENSEA OVERLORDS ***

  /// @dev Override supportsInterface to use ERC1155 and ERC2981
  function supportsInterface(
    bytes4 interfaceId
  ) public view virtual override(ERC1155Delta, ERC2981) returns (bool) {
    return super.supportsInterface(interfaceId);
  }

  /// @dev Override to use filter operator
  function setApprovalForAll(
    address operator,
    bool approved
  ) public override onlyAllowedOperatorApproval(operator) {
    super.setApprovalForAll(operator, approved);
  }

  /// @dev Override transfer to use filter operator
  function safeTransferFrom(
    address from,
    address to,
    uint256 tokenId,
    uint256 amount,
    bytes memory data
  ) public override onlyAllowedOperator(from) {
    super.safeTransferFrom(from, to, tokenId, amount, data);
  }

  /// @dev Override batch transfer to use filter operator
  function safeBatchTransferFrom(
    address from,
    address to,
    uint256[] memory ids,
    uint256[] memory amounts,
    bytes memory data
  ) public virtual override onlyAllowedOperator(from) {
    super.safeBatchTransferFrom(from, to, ids, amounts, data);
  }
}
